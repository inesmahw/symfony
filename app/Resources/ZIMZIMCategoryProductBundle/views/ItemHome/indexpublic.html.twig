{% extends 'ZIMZIMCategoryProductBundle::layout.html.twig' %}

{% block title %}
    {{ 'views.itemhome.index.title'|trans }}
{% endblock title %}

{% block page %}

    <div class="row">
        <div class="small-12 columns">
            <h1 class="headertitle text-center">
                {{ 'views.itemhome.index.title'|trans }}
            </h1>
        </div>
    </div>

    <div class="row full-width">
        <div class="small-10 small-centered columns">
            <div id="owl-demo" class="owl-carousel owl-theme">
                {% for entity in entities %}
                    {% include 'ZIMZIMCategoryProductBundle:ItemHome:include/itemhomebox.html.twig' with {'entity': entity} %}
                {% endfor %}
            </div>
        </div>
    </div>

    <hr class="category">

    <div class="row">
        <div class="small-12 columns">
            <p class="paratitle">
                {{ 'views.itemhome.index.feel'|trans }}
            </p>
        </div>
    </div>

    <div class="row">
        <div class="small-10 small-centered columns">
            <ul class="small-block-grid-1 medium-block-grid-2">
                <li class="homebox text-center">
                    <h2>
                        {{ 'views.itemhome.index.hometitle1'|trans }}
                    </h2>

                    <p class="parahome nomargin">
                        {{ 'views.itemhome.index.homepara1'|trans }}
                    </p>
                </li>
                <li class="homebox">
                    <h2>
                        {{ 'views.itemhome.index.hometitle2'|trans }}
                    </h2>

                    <p class="parahome nomargin">
                        {{ 'views.itemhome.index.homepara2'|trans }}
                    </p>
                </li>
                <li class="homebox">
                    <h2>
                        {{ 'views.itemhome.index.hometitle3'|trans }}
                    </h2>

                    <p class="parahome nomargin">
                        {{ 'views.itemhome.index.homepara3'|trans }}
                    </p>
                </li>
                <li class="homebox">
                    <h2>
                        {{ 'views.itemhome.index.hometitle4'|trans }}
                    </h2>

                    <p class="parahome nomargin">
                        {{ 'views.itemhome.index.homepara4'|trans }}
                    </p>
                </li>
            </ul>
        </div>
    </div>

    <hr class="category">

    <div class="row full-width">
        <div class="small-12 medium-8 medium-centered columns">
            <p class="paratitle text-center">
                {{ 'views.itemhome.index.titleeco'|trans|raw }}
                </h2>

            <p class="paraplus text-center">
                {{ 'views.itemhome.index.paraeco'|trans|raw }}
            </p>
        </div>
    </div>
{% endblock page %}


{% block javascripts %}

    {{ parent() }}

    <script>
        $(document).ready(function () {

            $("#owl-demo").owlCarousel({

                autoPlay: 3000,
                itemsCustom: [
                    [0, 1],
                    [700, 2],
                    [1200, 3]
                ],
                'addClassActive': true,
                navigation: false
            });

            window.Carousel = $(".owl-carousel").data('owlCarousel');

        });

    </script>
{% endblock javascripts %}

